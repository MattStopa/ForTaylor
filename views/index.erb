<style>
  table {
    width: 300px;
  }
  table, th, td {
      border: 1px solid black;
      padding: 7px;
      border-collapse: collapse;
  }
</style>

<br>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Actions</th>
  </tr>
  <% @records.each do |record| %>
    <tr>
      <td>
        <%= record.FirstName %>
      </td>
      <td>
        <%= record.LastName %>
      </td>
      <td>
        <a href="/delete?id=<%= record.id %>">delete</a>
        <a href="/edit?id=<%= record.id %>">edit</a>
      </td>
    </tr>
  <% end %>
</table>

<a href="/search">All Records</a>